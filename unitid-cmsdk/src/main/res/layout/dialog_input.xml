<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="330dp" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center_horizontal"
                      android:background="@drawable/background_dialog" android:layout_gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/dialog_input_title" android:textSize="@dimen/text_size_header"
                      android:textColor="@color/black" android:layout_marginTop="15dp"
                      android:layout_marginBottom="32dp"/>
            <EditText android:layout_width="250dp" android:layout_height="wrap_content"
                      android:background="@drawable/background_dialog_input" android:id="@+id/dialog_input_input"
                      android:textSize="@dimen/text_size_normal" android:paddingLeft="6dp" android:singleLine="true"
                      android:paddingRight="6dp"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal" android:gravity="center"
                          android:layout_marginTop="10dp" android:id="@+id/dialog_input_show"
                    android:visibility="gone">
                <ImageView android:layout_width="15dp" android:layout_height="15dp"
                           android:layout_marginRight="5dp" android:id="@+id/dialog_input_show_icon"
                           android:background="@drawable/background_myappapproved_checkbox"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="@dimen/text_size_small" android:text="@string/label_password_show"
                          android:id="@+id/dialog_input_show_text" android:textColor="@color/lightgray"/>
            </LinearLayout>
            <LinearLayout android:layout_width="250dp" android:layout_height="30dp"
                          android:orientation="horizontal" android:layout_marginTop="18dp"
                          android:layout_marginBottom="20dp">
                <Button android:layout_width="100dp" android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_normal" android:textColor="@color/white"
                        android:text="@string/button_cancel" android:id="@+id/dialog_input_cancel"
                        android:background="@drawable/button_cancel"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_weight="1"/>
                <Button android:layout_width="100dp" android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_normal" android:textColor="@color/white"
                        android:text="@string/button_ok" android:id="@+id/dialog_input_ok"
                        android:background="@drawable/button_reg_reg"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:visibility="gone" android:id="@+id/keyboard_show">
        <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:keyTextColor="@color/white"
                android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>