<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_depart"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_90"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/tv_setting_name"
        style="@style/black_middle_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_25"
        android:text="审批名称" />

    <TextView
        android:id="@+id/tv_level"
        style="@style/gray_hint_small_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_setting_name"
        android:layout_alignBottom="@+id/tv_setting_name"
        android:layout_marginStart="@dimen/dimen_15"
        android:layout_toEndOf="@+id/tv_setting_name"
        android:text="一级" />

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_20"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_setting_name"
        android:layout_marginBottom="@dimen/dimen_10"
        android:src="@drawable/ic_head" />

    <TextView
        android:id="@+id/tv_approval_namne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_header"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/iv_header"
        android:text="张四" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_approval_namne"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:text=". . ." />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
       android:layout_alignParentTop="true"
        android:background="@color/grey_f5f5f5" />


</RelativeLayout>