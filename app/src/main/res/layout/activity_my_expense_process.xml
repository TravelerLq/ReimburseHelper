<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/includeTitleLayout"
        layout="@layout/include_bar_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@color/bg_tab_grey"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_rectangle"
            android:padding="0.1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_approving"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/middle_text_style"
                android:text="@string/wait_approval" />

            <TextView
                android:id="@+id/tv_approved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/middle_text_style"
                android:text="@string/approval_finish" />

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_expense_process"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/materialRdGp"></FrameLayout>



</LinearLayout>
