<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_bar_title"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150"
        android:layout_marginTop="@dimen/dimen_50"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="410"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:textColor="@color/blue_text"
                android:text="发票拍照"/>
        </LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="330"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_blue" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="新建"/>

</LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_home"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20">

        <RelativeLayout
            android:id="@+id/rl_my_expense"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_160"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp"
            android:background="@color/white"
            android:padding="@dimen/dimen_37">

            <ImageView
                android:id="@+id/iv_my_expense"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_90"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_round_orange_shape"
                android:src="@drawable/icon_expense" />

            <TextView
                android:id="@+id/tv_my_expense_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/iv_my_expense"
                android:text="@string/my_expense"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_my_expense_title"
                android:layout_below="@+id/tv_my_expense_title"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_no_data"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:text="@string/no_data"
                android:textSize="@dimen/super_small_text_size" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_approval"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_160"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dimen_20"
            android:padding="@dimen/dimen_37">

            <ImageView
                android:id="@+id/iv_my_approval"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_90"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:background="@drawable/bg_round_green_shape"
                android:src="@drawable/ic_my_expense" />

            <TextView
                android:id="@+id/tv_my_approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_my_approval"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="20dp"
                android:text="@string/my_approval"
                android:textColor="@color/green_text"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_my_approval"
                android:layout_below="@+id/tv_my_approval"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_no_data"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:text="@string/no_data"
                android:textSize="@dimen/super_small_text_size" />
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
