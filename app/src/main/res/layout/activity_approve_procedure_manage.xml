<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.sas.rh.reimbursehelper.view.activity.ApproveProcedureAddActivity">

    <include layout="@layout/include_bar_title"></include>

    <LinearLayout
        android:id="@+id/ll_approval_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dimen_15"
            android:text="审批序号:" />

        <EditText
            android:id="@+id/edt_approval_no"
            style="@style/gray_noraml_small_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.5"
            android:drawableRight="@drawable/icon_arrow_right"
            android:gravity="center"
            android:paddingRight="@dimen/dimen_15"
            android:background="@null"
            android:hint="@string/select"
            android:focusable="false"
            android:clickable="false"
            android:text="请选择" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/stock" />
    <!--审批人-->
    <LinearLayout
        android:id="@+id/ll_approval_person"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dimen_15"
            android:text="审批人:" />

        <EditText
            android:id="@+id/edt_approval_person"
            style="@style/gray_noraml_small_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.5"
            android:drawableRight="@drawable/icon_arrow_right"
            android:focusable="false"
            android:gravity="center"
            android:background="@null"
            android:hint="@string/select"
            android:paddingRight="@dimen/dimen_15" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/stock" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dimen_15"
            android:text="审批名称:" />

        <EditText
            android:id="@+id/edt_approval_title"
            style="@style/gray_noraml_small_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/hint_input"
            android:paddingRight="@dimen/dimen_15" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/stock" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@drawable/btn_save_baoxiajizhu"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="#FFF"
        android:textSize="18dp" />
</LinearLayout>