<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_notice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_recycle"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_5"
    android:paddingRight="@dimen/dimen_10">

    <RelativeLayout
        android:id="@+id/rl_expense_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_110"
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_13">

        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView9"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/imageView9"
            android:text="title" />

        <TextView
            android:id="@+id/tv_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_notice_content"
            android:layout_alignEnd="@+id/tv_state"
            android:text="2018-01-21" />

        <TextView
            android:id="@+id/tv_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_notice_title"
            android:layout_below="@+id/tv_notice_title"
            android:layout_marginTop="22dp"
            android:text="testMsgContent"
            android:textSize="@dimen/big_text_size" />


        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_notice_title"
            android:layout_marginEnd="8dp"
            android:text="未读" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ic_remark" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_money"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:src="@drawable/check_blue" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_8"
        android:background="@color/bg_recycle" />

</RelativeLayout>
