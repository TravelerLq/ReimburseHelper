<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.sas.rh.reimbursehelper.view.activity.DepartmentsManageAddItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1882CE"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backbt"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/return_icon" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:gravity="center"
            android:text="创建部门"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVi23ewer28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="部门名称"
                android:textColor="#000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/dname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="left|top"
                android:hint="请输入部门名称"
                android:maxLength="100"
                android:minLines="1"
                android:padding="10dp"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVi23ew28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="报销限额"
                android:textColor="#000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/dlimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="left|top"
                android:hint="请输入报销限额"
                android:inputType="numberDecimal"
                android:maxLength="100"
                android:minLines="1"
                android:padding="10dp"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_expense_authority"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="报销权限"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
               android:id="@+id/tv_expense_authority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="left|top"
                android:inputType="numberDecimal"
                android:text="请选择报销权限"
                android:textColor="@color/stock"
                android:maxLength="100"
                android:minLines="1"
                android:padding="10dp"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text3View28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="部门主管"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/master_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="#FFF"
                    android:gravity="left|top"
                    android:hint="请点击右侧添加按钮选择"
                    android:maxLength="100"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

                <com.sas.rh.reimbursehelper.widget.CircleImageView
                    android:id="@+id/master_head"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|left"
                    android:src="@mipmap/head"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/addDM"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@mipmap/add_one" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:id="@+id/savebt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/btn_save_baoxiajizhu"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:text="保 存" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

