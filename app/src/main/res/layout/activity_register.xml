<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.sas.rh.reimbursehelper.view.activity.RegFirstStepActivity">

    <include layout="@layout/include_bar_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="账号:"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_acount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="#FFF"
                    android:gravity="left|top"
                    android:hint="请输入您的账号"
                    android:maxLength="11"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView828"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="用户姓名:"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_real_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="#FFF"
                    android:gravity="left|top"
                    android:hint="请输入真实姓名"
                    android:inputType="text"
                    android:maxLength="11"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/f"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="身份证号:"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_userID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="#FFF"
                    android:gravity="left|top"
                    android:hint="请输入身份证号"
                    android:maxLength="30"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="手机号码:"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_tel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="#FFF"
                    android:gravity="left|top"
                    android:hint="请输入手机号"
                    android:inputType="number|phone"
                    android:maxLength="11"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="邮箱:"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_emil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="#FFF"
                    android:gravity="left|top"
                    android:hint="请输入邮箱"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="密码:"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_psw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="#FFF"
                    android:hint="请输入您的密码"
                    android:inputType="numberPassword"
                    android:maxLength="11"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="验证码:"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/yzmet"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:gravity="left|top"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:minLines="1"
                    android:padding="10dp"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/getyzmbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="获取验证码" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nexttostep2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_weight="1"
                android:background="@drawable/btn_save_baoxiajizhu"
                android:gravity="center"
                android:text="登录"
                android:textColor="#FFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@drawable/btn_save_baoxiajizhu"
                android:gravity="center"
                android:text="注册"
                android:textColor="#FFF"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_register"
            style="@style/white_middle_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_save_baoxiajizhu"
            android:text="注册"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_is_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="还没注册？" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_go_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即注册"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>