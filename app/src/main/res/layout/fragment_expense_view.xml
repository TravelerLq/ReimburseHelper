<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1882CE"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:text="消息" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_view_expense"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/edt_remark"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_save_baoxiajizhu"
        android:gravity="center"
        android:text="@string/view_expense"
        android:textColor="#FFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_expense_approval"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/edt_remark"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_save_baoxiajizhu"
        android:gravity="center"
        android:text="@string/view_approval_expense"
        android:textColor="#FFF"
        android:textSize="18dp" />

</LinearLayout>
