<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f5f5f5"
    tools:context="com.sas.rh.reimbursehelper.view.activity.DepartmentsManageAddItemActivity">

    <include
        android:id="@+id/bar_title"
        layout="@layout/include_bar_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVi23ewer28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="部门名称"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="left|top"
                android:maxLength="100"
                android:minLines="1"
                android:padding="10dp"
                android:text="名称"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/stock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="部门人数"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="left|top"
                android:maxLength="100"
                android:minLines="1"
                android:padding="10dp"
                android:text="请输入部门人说"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/stock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVi23ew28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="报销限额"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="left|top"
                android:inputType="numberDecimal"
                android:maxLength="100"
                android:minLines="1"
                android:padding="10dp"
                android:text="请输入报销限额"
                android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/stock" />

        <LinearLayout
            android:id="@+id/ll_expense_authority"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="报销权限"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_expense_authority"
                style="@style/gray_hint_middle_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:maxLength="100"
                android:minLines="1"
                android:padding="10dp"
                android:text="请选择报销权限"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text3View28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="部门主管"
                android:textColor="#000"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_manager"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:focusable="false"
                    android:gravity="left|top"
                    android:inputType="none"
                    android:maxLength="100"
                    android:minLines="1"
                    android:padding="10dp"
                    android:text="主管"
                    android:textSize="16dp" />

                <com.sas.rh.reimbursehelper.widget.CircleImageView
                    android:id="@+id/master_head"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|left"
                    android:src="@mipmap/head"
                    android:visibility="gone"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/addDM"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/add_one" />

        </LinearLayout>


